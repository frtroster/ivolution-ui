@import 'foundation.css'
@import '../../../bower_components/stylus-nib'

/*
  Colors based on scheme

  https://kuler.adobe.com/Copy-of-Jaws-color-theme-2668083/
 */

color-alert            = #D30027
color-bg-default       = #FCFBE7
color-bg-compl         = #9FD3DA
color-text-strong      = #05484F
color-text-default     = #008C9A
mobile-width           = 500px
mobile-min-width-query = "screen and (min-width: " + mobile-width + ")"

/*
  Generic
 */
form
  p.hint
    font-size 77%
    margin -1em 0 1em 0
    color color-bg-compl
    text-align right
    a
      color color-bg-compl
      &:focus,
      &:hover
        text-decoration underline
        color color-text-default

default-shadow(color)
  -webkit-box-shadow 0 0 5px color
  -moz-box-shadow 0 0 5px color
  box-shadow 0 0 5px color

/*
  Auth (aka login screen and pre-auth dialogs and messages)
 */
@css {
  body, html {
    height: 100%;
    /*
      To edit this background, follow this link:
      http://svgeneration.com/generate/Circles-Everywhere?background=ffffff&top-left=904bdb&top-right=33f04c&bottom-right=e3e352&bottom-left=eb9c34&center=d94747&top-center=3751b8&
     */
    background-image: url('data:image/svg+xml;base64,');
    background-color: white;
    background-attachment: fixed;
  }
}

.vertical-align-wrap
  position relative
  height 100%
  > div
    position absolute
    top 50%
    left auto
    margin-top -10em
    width 100%

.auth-block
  max-width mobile-width
  margin 0 auto
  background white
  padding 1.5em 2em 2em 2em

  @media mobile-min-width-query
    border-radius 1em

  a:hover
    text-decoration underline

  h1
    margin 0 0 .8em 0
    font-size 130%
    a
      color color-text-default
      strong
        color color-text-strong
      &:hover
        text-decoration none
        strong
          color color-alert

  form
    margin 0
    input[type=submit]
      margin 0
      width 100%
      color color-bg-default
      background color-text-default
      border-style none
      cursor pointer
      padding .3em 1em
      text-align right
      &:hover,
      &:focus
        background color-text-strong
        default-shadow #999

  .button-group
    text-align right
    *
      float none
      vertical-align middle
    a.button:hover
      text-decoration none

/*
  Backend administration

  Main window
 */
.admin-main
  background white
  height 100%
  width 100%