@import 'foundation.css'
@import '../../../bower_components/stylus-nib'

/*
  Colors based on scheme

  https://kuler.adobe.com/Copy-of-Jaws-color-theme-2668083/
 */

color-alert        = #D30027
color-bg-default   = #FCFBE7
color-bg-compl     = #9FD3DA
color-text-strong  = #05484F
color-text-default = #008C9A

default-shadow(color)
  -webkit-box-shadow 0 0 5px color
  -moz-box-shadow 0 0 5px color
  box-shadow 0 0 5px color

@css {
  body, html {
    height: 100%;
    /*
      To edit this background, follow this link:
      http://svgeneration.com/generate/Circles-Everywhere?background=ffffff&top-left=904bdb&top-right=33f04c&bottom-right=e3e352&bottom-left=eb9c34&center=d94747&top-center=3751b8&
     */
    background-image: url('data:image/svg+xml;base64,');
    background-color: white;
  }
}

h1, h2, h3, h4
  margin-bottom 0

h2
  font-size 1.2em

.vertical-align-wrap
  position relative
  height 100%

.vertical-align-wrap > div
  position absolute
  top 50%
  left auto
  margin-top -10em
  width 100%

.login-block
  max-width 30em
  margin 0 auto
  background white
  padding 1.5em 2em 2em 2em

  @media screen and (min-width: 30em)
    border-radius 1em

.login-block h1
  text-transform lowercase
  margin 0 0 .8em 0
  font-size 130%

.login-block h1 a
  color color-text-default

.login-block h1 strong
  color color-text-strong

.login-block p.hint
  font-size 77%
  margin -1em 0 1em 0
  color color-bg-compl
  text-align right

.login-block p.hint a
  color color-bg-compl

.login-block p.hint a:hover
  text-decoration underline
  color color-text-default

.login-block form
  margin 0

.login-block form input[type=submit]
  margin 0
  width 100%
  color color-bg-default
  background color-text-default
  border-style none
  cursor pointer
  padding .3em 1em
  text-align right

.login-block form input[type=submit]:hover,
.login-block form input[type=submit]:focus
  background color-text-strong
  default-shadow #999